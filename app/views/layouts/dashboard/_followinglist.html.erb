<div class="dashboard-following-list">
  <p class="lead">Following:</p>
  <ul>
    <% current_user.followed_users.each do |followed| %>
      <li>
        <%= image_tag followed.avatar(:thumb) %>
        <%= link_to "unfollow @#{followed.handle}",
                    "/unfollow/#{followed.id}",
                      remote: true, class: "btn btn-danger btn-xs" %>
      </li>
    <% end %>
  </ul>
</div>
