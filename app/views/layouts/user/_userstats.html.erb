<p class="lead">
  <% user = current_user if user == nil %>
  <%= image_tag user.avatar(:thumb), class: 'avatar-image' %>
  <%= link_to "@#{user.handle}", user_path(user) %>
</p>
<table class="table">
  <thead>
    <th>Tweets</th>
    <th>Following</th>
    <th>Followers</th>
  </thead>
  <tr>
    <td id="user-tweets-count"><%= link_to user.tweets.count, user_path(user) %></td>
    <td id="user-followed-users-count"><%= link_to user.followed_users.count, user_relations_path(user) %></td>
    <td id="user-followers-count"><%= link_to user.followers.count, user_relations_path(user)  %></td>
  </tr>
</table>
