<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <p><%= link_to "unfollow @#{user.handle}", unfollow_user_path(user),
                    remote: true, class: "btn btn-danger" %></p>
  <% else %>
    <p><%= link_to "follow @#{user.handle}", follow_user_path(user),
                remote: true, class: "btn btn-primary" %></p>
  <% end %>
<% end %>
