<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 ui-box">
    <h3>User Search Results</h3>
    <p class="text-muted">query: <%= @search_term %></p>

    <% @users.each do |user| %>
      <div class="timeline-tweet">
        <%= render('layouts/user/user_search_result', user: user) %>
      </div>
    <% end %>

    <% if @users.length == 0 %>
      <div class="timeline-mention">
        <h3>--NO RESULTS--</h3>
      </div>
    <% end %>

    <%= link_to "Back to Timeline", user_root_path, class: "btn btn-primary" %>
  </div>

  <div class="col-md-3"></div>
  <div class="clearfix visible-md-block"></div>
</div>
